.animation-area {
  display: flex;
  width: 100%;
  padding-top: 150rpx;
  padding-bottom: 150rpx;
  justify-content: center;
  overflow: hidden;   /* 动画演示时，隐藏超出区域 */
  background-color: #fff;
  border: 1px solid sandybrown;
  margin-bottom: 10px;
}

.animation-element {
  width: 200rpx;
  height: 200rpx;
  background-color: #1aad19;
}

.btn-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

button {
  margin: 5px;
}